<div class="row">
  <div class="small-5 columns centered">
    <h2>Sign Up</h2>
  </div>
</div>

<div class="row">
  <div class="small-5 columns centered">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <div><%= f.input :first_name, label: false, placeholder: 'First name', error_html: { class: "devise"} %></div>

      <div><%= f.input :last_name, label: false, placeholder: 'Last name' %></div>

      <div><%= f.input :email, autofocus: true, label: false, placeholder: 'Email address' %></div>

      <div><%= f.input :password, label: false, placeholder: 'Password' %></div>

      <div><%= f.input :password_confirmation, label: false, placeholder: 'Password confirmation' %></div>

      <div><%= f.submit "Sign me up!", class: 'btn' %></div>
    <% end %>
  </div>
</div>
