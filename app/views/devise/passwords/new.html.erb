<div class="row form devise">
  <div class="small-5 columns centered">
    <h2>Forgot your password?</h2>
  </div>
</div>

<div class="row devise-form">
  <div class="small-5 columns centered">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
      <div><%= f.email_field :email, :autofocus => true, label: false, placeholder: 'Email address' %></div>

      <div><%= f.submit "Send me reset password instructions", class: 'radius button' %></div>
    <% end %>
  </div>
</div>

