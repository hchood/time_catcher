<div class="row form devise">
  <div class="small-12 large-5 columns centered">
    <h2>Change your password</h2>
  </div>
</div>

<div class="row form devise">
  <div class="small-12 large-5 columns centered">
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div><%= f.input :password, label: false, placeholder: 'New password' %></div>

      <div><%= f.input :password_confirmation, label: false, placeholder: 'Password confirmation' %></div>

      <div><%= f.submit "Change my password", class: 'radius button' %></div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
